        android:layout_marginTop="10dp"
        android:background="#007edf"
        android:text="支付宝线下二维码支付"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/aliOfflineQRImg"
        android:layout_width="wrap_content"
