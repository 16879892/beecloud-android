<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cn.beecloud.sdk_demo.BillListActivity">

    <Button
        android:id="@+id/btnWeChatOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#007edf"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="微信订单查询"
        android:padding="6dp"/>


    <Button
        android:id="@+id/btnAliPayOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnWeChatOrder"
        android:background="#007edf"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="支付宝订单查询"
        android:padding="6dp"/>

    <Button
        android:id="@+id/btnUNPayOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAliPayOrder"
        android:layout_marginTop="10dp"
        android:background="#007edf"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="银联订单查询"
        android:padding="6dp"/>


    <ListView
        android:id="@+id/listViewOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnUNPayOrder"
        android:layout_marginTop="20dp"></ListView>
</RelativeLayout>
