<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ShoppingCartActivity">

    <ListView
        android:id="@+id/lstViewShoppingCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnPay"
                android:layout_height="wrap_content"
                android:background="#007edf"
                android:layout_weight="1"
                android:text="结算"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_width="wrap_content" />

            <Button
                android:id="@+id/btnReqQRCode"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#007edf"
                android:layout_weight="1"
                android:text="二维码支付"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnQueryBills"
                android:layout_height="wrap_content"
                android:background="#007edf"
                android:layout_weight="1"
                android:text="查询支付订单"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_width="wrap_content" />

            <Button
                android:id="@+id/btnQueryRefunds"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#007edf"
                android:layout_weight="1"
                android:text="查询退款订单"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRefundStatus"
            android:layout_height="wrap_content"
            android:background="#007edf"
            android:text="查看退款状态更新"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_width="fill_parent" />

    </LinearLayout>

</RelativeLayout>
